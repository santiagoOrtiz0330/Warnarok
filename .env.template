# Copy this file to `.env` and replace placeholder values with your Railway secrets.

# Base MySQL settings supplied by Railway
MYSQL_DATABASE=ragnarok
MYSQL_URL=mysql://root:CHANGE_ME@mysql.railway.internal:3306/ragnarok
MYSQL_PUBLIC_URL=mysql://root:CHANGE_ME@public-host:12345/ragnarok
MYSQL_ROOT_PASSWORD=CHANGE_ME
MYSQL_HOST=mysql.railway.internal
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=CHANGE_ME

# Compatibility aliases often used by deployment helpers
MYSQLDATABASE=${MYSQL_DATABASE}
MYSQLHOST=${MYSQL_HOST}
MYSQLPORT=${MYSQL_PORT}
MYSQLUSER=${MYSQL_USER}
MYSQLPASSWORD=${MYSQL_PASSWORD}

# rAthena login-server connection
RATHENA_LOGIN_DB_HOST=${MYSQL_HOST}
RATHENA_LOGIN_DB_PORT=${MYSQL_PORT}
RATHENA_LOGIN_DB_USER=${MYSQL_USER}
RATHENA_LOGIN_DB_PASSWORD=${MYSQL_PASSWORD}
RATHENA_LOGIN_DB_NAME=${MYSQL_DATABASE}

# rAthena char-server connection
RATHENA_CHAR_DB_HOST=${MYSQL_HOST}
RATHENA_CHAR_DB_PORT=${MYSQL_PORT}
RATHENA_CHAR_DB_USER=${MYSQL_USER}
RATHENA_CHAR_DB_PASSWORD=${MYSQL_PASSWORD}
RATHENA_CHAR_DB_NAME=${MYSQL_DATABASE}

# rAthena map-server connection
RATHENA_MAP_DB_HOST=${MYSQL_HOST}
RATHENA_MAP_DB_PORT=${MYSQL_PORT}
RATHENA_MAP_DB_USER=${MYSQL_USER}
RATHENA_MAP_DB_PASSWORD=${MYSQL_PASSWORD}
RATHENA_MAP_DB_NAME=${MYSQL_DATABASE}

# rAthena log database connection (defaults to same schema as the game DB)
RATHENA_LOG_DB_HOST=${MYSQL_HOST}
RATHENA_LOG_DB_PORT=${MYSQL_PORT}
RATHENA_LOG_DB_USER=${MYSQL_USER}
RATHENA_LOG_DB_PASSWORD=${MYSQL_PASSWORD}
RATHENA_LOG_DB_NAME=${MYSQL_DATABASE}

# Optional: web-server SQL pools (Flux / REST)
RATHENA_WEB_DB_HOST=${MYSQL_HOST}
RATHENA_WEB_DB_PORT=${MYSQL_PORT}
RATHENA_WEB_DB_USER=${MYSQL_USER}
RATHENA_WEB_DB_PASSWORD=${MYSQL_PASSWORD}
RATHENA_WEB_DB_NAME=${MYSQL_DATABASE}

# Default character set override (leave empty to use server defaults)
RATHENA_SQL_CODEPAGE=
